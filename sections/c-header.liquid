      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "button_order",
      "label": "Button order",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 3
    },

    {
      "type": "header",
      "content": "Heights"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "label": "Desktop header height",
      "min": 44,
      "max": 110,
      "step": 1,
      "default": 70
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Mobile header height",
      "min": 40,
      "max": 90,
      "step": 1,
      "default": 54
    },

    {
      "type": "header",
      "content": "Logo width (desktop override)"
    },
    {
      "type": "range",
