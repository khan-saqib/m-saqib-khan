    {
      "type": "range",
      "id": "center_font_size_mobile",
      "label": "Center font size (mobile)",
      "min": 9,
      "max": 18,
      "step": 1,
      "default": 11
    },

    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
