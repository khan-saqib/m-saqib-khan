{% comment %}
  Tisso Vision – Gift Guide Hero (Dawn compatible)
  - Responsive: desktop split layout, mobile stacked
  - Uses Dawn color-scheme
  - Button hover fill animation (black -> yellow) LTR/RTL

  Install:
  1) Save as: sections/tv-gift-guide-hero.liquid
  2) Add in theme editor
{% endcomment %}

{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* SECTION WRAP */
  .tv-hero {
    position: relative;
  }

  /* Full width/height hero area */
  .tv-hero__frame {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.desktop_height }}px;
    overflow: hidden;
  }

  @media screen and (max-width: 989px) {
    .tv-hero__frame {
      min-height: {{ section.settings.mobile_height }}px;
    }
  }

  /* Media (desktop) */
  .tv-hero__media {
    position: absolute;
    inset: 0;
    z-index: 0;
    background: #fff;
  }

  .tv-hero__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Overlay (optional) */
  .tv-hero__overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: rgba(255, 255, 255, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    pointer-events: none;
  }

  /* Content (desktop positioned over hero) */
  .tv-hero__content {
    position: absolute;
    z-index: 2;
    padding: 0 clamp(22px, 4vw, 56px) 36px;

    /* Default desktop position */
    left: 6%;
    top: 50%;
    transform: translateY(-50%);

    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .tv-hero__heading {
    margin: 0;
    font-weight: 500;
    line-height: 1.05;
    letter-spacing: -0.02em;
    font-size: clamp(34px, 4vw, 56px);
  }

  .tv-hero__text {
    margin: 0;
    font-size: 20px;
    line-height: 1.5;
    opacity: 1;
    max-width: 35vw;
  }

  /* CTA */
  .tv-hero__cta {
    margin-top: 10px;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    width: fit-content;
  }

  /* Button: black -> yellow fill */
  .tv-btn {
    --tv-btn-bg: #000;
    --tv-btn-text: #fff;
    --tv-btn-hover-bg: #ffeb3b; /* yellow */
    --tv-btn-hover-text: #000;

    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 14px;
    min-width: 220px;
    justify-content: center;

    padding: 12px 18px;
    border-radius: 0;
    border: 1px solid #000;

    background: var(--tv-btn-bg);
    color: var(--tv-btn-text);
    text-decoration: none;

    font-size: 16px;
    letter-spacing: 0.08em;
    text-transform: uppercase;

    overflow: hidden;
    transition: color 220ms ease;
  }

  .tv-btn:before {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 0%;
    background: var(--tv-btn-hover-bg);
    z-index: 0;

    /* direction */
    left: 0;
    right: auto;

    transition: width 260ms ease;
  }

  .tv-btn[data-direction='rtl']:before {
    left: auto;
    right: 0;
  }

  .tv-btn > span,
  .tv-btn > svg {
    position: relative;
    z-index: 1;
  }

  .tv-btn:hover {
    color: var(--tv-btn-hover-text);
  }

  .tv-btn:hover:before {
    width: 100%;
  }

  .tv-btn svg {
    width: 18px;
    height: 18px;
  }

  /* ===== Desktop positioning settings ===== */
  .tv-hero[data-desktop-pos='top-left'] .tv-hero__content {
    left: 0%;
    top: 0%;
    transform: none;
  }
  .tv-hero[data-desktop-pos='top-center'] .tv-hero__content {
    left: 50%;
    top: 0%;
    transform: translateX(-50%);
    text-align: center;
    align-items: center;
  }
  .tv-hero[data-desktop-pos='top-right'] .tv-hero__content {
    right: 0%;
    left: auto;
    top: 0%;
    transform: none;
    text-align: right;
    align-items: flex-end;
  }

  .tv-hero[data-desktop-pos='center-left'] .tv-hero__content {
    left: 0%;
    top: 50%;
    transform: translateY(-50%);
  }
  .tv-hero[data-desktop-pos='center'] .tv-hero__content {
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    align-items: center;
  }
  .tv-hero[data-desktop-pos='center-right'] .tv-hero__content {
    right: 0%;
    left: auto;
    top: 50%;
    transform: translateY(-50%);
    text-align: right;
    align-items: flex-end;
  }

  .tv-hero[data-desktop-pos='bottom-left'] .tv-hero__content {
    left: 0%;
    top: auto;
    bottom: 0%;
    transform: none;
  }
  .tv-hero[data-desktop-pos='bottom-center'] .tv-hero__content {
    left: 50%;
    top: auto;
    bottom: 0%;
    transform: translateX(-50%);
    text-align: center;
    align-items: center;
  }
  .tv-hero[data-desktop-pos='bottom-right'] .tv-hero__content {
    right: 0%;
    left: auto;
    top: auto;
    bottom: 0%;
    transform: none;
    text-align: right;
    align-items: flex-end;
  }

  /* ===== Mobile layout (as you requested) =====
    - Heading + text ABOVE image (centered)
    - Button ON the image at the bottom
  */
  @media screen and (max-width: 989px) {
    .tv-hero__content {
      position: static;
      transform: none;
      max-width: 100%;
      padding: 26px 18px 16px;
      align-items: center;
      text-align: center;
      gap: 12px;
    }

    .tv-hero__heading {
      font-size: 30px;
    }

    .tv-hero__text {
      font-size: 16px;
      opacity: 1;
      max-width: none;
    }

    .tv-hero__frame {
      display: grid;
      grid-template-rows: auto 1fr;
    }

    /* The media becomes the second row */
    .tv-hero__media {
      position: relative;
      inset: auto;
      grid-row: 2;
      min-height: calc({{ section.settings.mobile_height }}px - 170px);
    }

    .tv-hero__overlay {
      position: absolute;
      inset: 0;
    }

    /* Mobile CTA is pinned inside image bottom */
    .tv-hero__cta {
      position: absolute;
      left: 50%;
      bottom: 18px;
      transform: translateX(-50%);
      width: calc(100% - 36px);
      max-width: 320px;
      justify-content: center;
      margin: 0;
      z-index: 3;
    }

    .tv-btn {
      width: 100%;
      justify-content: center;
      padding: 14px 18px;
    }
  }

  /* Bottom bar (outside hero frame, always visible) */
  .tv-hero__bottom {
    width: 100%;
    text-align: center;
    font-size: 16px;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    opacity: 0.9;
  }

  .tv-hero__bottom-inner {
    padding: 6px 12px;
    background: #f5f5f5;
    color: #000;
  }
{%- endstyle -%}

<section
  class="tv-hero color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding"
  data-desktop-pos="{{ section.settings.desktop_content_position }}"
>
  <div class="tv-hero__frame">
    <div class="tv-hero__media">
      {%- if section.settings.image_desktop != blank -%}
        <picture>
          {%- if section.settings.image_mobile != blank -%}
            <source
              media="(max-width: 989px)"
              srcset="
                {{ section.settings.image_mobile | image_url: width: 500 }} 500w,
                {{ section.settings.image_mobile | image_url: width: 800 }} 800w,
                {{ section.settings.image_mobile | image_url: width: 1100 }} 1100w
              "
              sizes="100vw"
            >
          {%- endif -%}

          <img
            src="{{ section.settings.image_desktop | image_url: width: 2000 }}"
            srcset="
              {{ section.settings.image_desktop | image_url: width: 900 }} 900w,
              {{ section.settings.image_desktop | image_url: width: 1200 }} 1200w,
              {{ section.settings.image_desktop | image_url: width: 1600 }} 1600w,
              {{ section.settings.image_desktop | image_url: width: 2000 }} 2000w
            "
            sizes="100vw"
            alt="{{ section.settings.image_desktop.alt | escape }}"
            loading="eager"
            fetchpriority="high"
          >
        </picture>
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}

      <div class="tv-hero__overlay"></div>
    </div>

    <div class="tv-hero__content" role="region" aria-label="Gift guide hero">
      {%- if section.settings.heading != blank -%}
        <h2 class="tv-hero__heading">{{ section.settings.heading | escape }}</h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="tv-hero__text">{{ section.settings.text }}</div>
      {%- endif -%}
        {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
        <div class="tv-hero__cta">
          <a
            class="tv-btn"
            href="{{ section.settings.button_link }}"
            aria-label="{{ section.settings.button_label | escape }}"
            data-direction="{{ section.settings.button_hover_direction }}"
          >
            <span>{{ section.settings.button_label | escape }}→</span>
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- if section.settings.bottom_text != blank -%}
    <div class="tv-hero__bottom">
      <div class="tv-hero__bottom-inner">
        {{ section.settings.bottom_text | escape }}
      </div>
    </div>
  {%- endif -%}
</section>

{% schema %}
{
  "name": "TV – Gift Guide Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image" 
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "button_hover_direction",
      "label": "Button hover fill direction",
      "default": "ltr",
      "options": [
        { "value": "ltr", "label": "Left to right" },
        { "value": "rtl", "label": "Right to left" }
      ]
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "label": "Desktop content position",
      "default": "center-left",
      "options": [
        { "value": "top-left", "label": "Top left" },
        { "value": "top-center", "label": "Top center" },
        { "value": "top-right", "label": "Top right" },
        { "value": "center-left", "label": "Center left" },
        { "value": "center", "label": "Center" },
        { "value": "center-right", "label": "Center right" },
        { "value": "bottom-left", "label": "Bottom left" },
        { "value": "bottom-center", "label": "Bottom center" },
        { "value": "bottom-right", "label": "Bottom right" }
      ]
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "default": 0
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom text",
      "default": "SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "label": "Desktop height",
      "min": 420,
      "max": 900,
      "step": 10,
      "default": 620
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Mobile height",
      "min": 420,
      "max": 900,
      "step": 10,
      "default": 640
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "TV – Gift Guide Hero"
    }
  ]
}
{% endschema %}
